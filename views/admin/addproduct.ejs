          <script>
               document.addEventListener('DOMContentLoaded', () => {
                    const imageInput = document.getElementById('images');
                    const croppingSection = document.getElementById('cropping-section');
                    const cropperContainer = document.getElementById('cropper-container');
                    const imageContainer = document.querySelector('.image-container');
                    const form = document.querySelector('form');

                    let cropperInstance = null;

                    imageInput.addEventListener('change', (e) => {
                         const file = e.target.files[0];
                         if (file) {
                              const reader = new FileReader();
                              reader.onload = (e) => {
                                   if (cropperInstance) {
                                        cropperInstance.destroy(); // Destroy previous Cropper instance
                                   }

                                   const image = new Image();
                                   image.src = e.target.result;
                                   image.onload = () => {
                                        cropperContainer.innerHTML = ''; // Clear previous cropper
                                        const cropperCanvas = document.createElement('canvas');
                                        cropperContainer.appendChild(cropperCanvas);

                                        cropperInstance = new Cropper(cropperCanvas, {
                                             aspectRatio: 9 / 16, // Set your desired aspect ratio
                                             viewMode: 1, // Show only the cropped area
                                        });

                                        cropperInstance.replace(image.src); // Display the selected image in Cropper
                                        croppingSection.style.display = 'block'; // Show cropping section
                                   };
                              };
                              reader.readAsDataURL(file);
                         }
                    });

                    document.getElementById('crop-image-btn').addEventListener('click', () => {
                         if (cropperInstance) {
                              const croppedImage = cropperInstance.getCroppedCanvas().toDataURL();
                              // Add the cropped image to the image preview section
                              const imageWrapper = document.createElement('div');
                              imageWrapper.classList.add('image-wrapper');

                              const imageElement = document.createElement('img');
                              imageElement.src = croppedImage;
                              imageElement.classList.add('img-fluid', 'img-thumbnail', 'mr-2');
                              imageWrapper.appendChild(imageElement);

                              // Create delete button
                              const deleteBtn = document.createElement('button');
                              deleteBtn.classList.add('btn', 'btn-danger', 'delete-btn');
                              deleteBtn.innerHTML = '<i class="fas fa-trash-alt"></i>';
                              deleteBtn.addEventListener('click', () => {
                                   imageElement.remove(); // Remove from DOM
                                   const croppedImagesInput = document.getElementById('croppedImages');
                                   const croppedImagesArray = JSON.parse(croppedImagesInput.value || '[]');
                                   const index = croppedImagesArray.indexOf(croppedImage);
                                   if (index !== -1) {
                                        croppedImagesArray.splice(index, 1); // Remove from array
                                        croppedImagesInput.value = JSON.stringify(croppedImagesArray);
                                   }
                              });
                              imageWrapper.appendChild(deleteBtn);

                              imageContainer.appendChild(imageWrapper);

                              // You can also push the cropped image data URL to an array for form submission
                              const croppedImagesInput = document.getElementById('croppedImages');
                              const croppedImagesArray = JSON.parse(croppedImagesInput.value || '[]');
                              croppedImagesArray.push(croppedImage);
                              croppedImagesInput.value = JSON.stringify(croppedImagesArray);

                              // Reset Cropper instance and input file
                              cropperInstance.destroy();
                              imageInput.value = '';
                              cropperContainer.innerHTML = '';
                              cropperInstance = null;
                              croppingSection.style.display = 'none'; // Hide cropping section
                         }
                    });

                    form.addEventListener('submit', async (e) => {
                         e.preventDefault(); // Prevent default form submission
                         console.log("1");

                         const croppedImagesInput = document.getElementById('croppedImages');
                         const croppedImagesArray = JSON.parse(croppedImagesInput.value || '[]');

                         // Validate form data
                         const isValid = validateForm(croppedImagesArray);
                         if (!isValid) {
                              return; // Stop form submission if validation fails
                         }

                         try {
                              // Perform form submission asynchronously
                              const response = await fetch('/admin/addproduct', {
                                   method: 'POST',
                                   headers: {
                                        'Content-Type': 'application/json'
                                   },
                                   body: JSON.stringify({
                                        category: form.category.value,
                                        p_name: form.p_name.value,
                                        price: form.price.value,
                                        description: form.description.value,
                                        discount: form.discount.value,
                                        stock: form.stock.value,
                                        croppedImages: croppedImagesArray
                                   })
                              });

                              if (!response.ok) {
                                   throw new Error('Failed to submit form');
                              }

                              const result = await response.json();
                              // Check if the response contains a success message
                              if (result.message === "Product added successfully") {
                                   // Redirect to the specified URL
                                   window.location.href = "/admin/viewproducts?msg=success";
                              } else {
                                   console.log(result);
                              }
                         } catch (error) {
                              console.error('Error:', error);
                         }
                    });

                    // Function to validate form
                    function validateForm(croppedImagesArray) {
                         const p_name = form.p_name.value.trim();
                         const price = parseFloat(form.price.value.trim());
                         const description = form.description.value.trim();
                         const discount = parseFloat(form.discount.value.trim());
                         const stock = parseInt(form.stock.value.trim());

                         if (!p_name || isNaN(price) || !description || isNaN(discount) || isNaN(stock)) {
                              Swal.fire({
                                   title: 'Error!',
                                   text: 'All fields are required and must be valid',
                                   icon: 'error',
                                   confirmButton: 'Retry'
                              });
                              return false; // Validation failed
                         }

                         if (price < 40) {
                              Swal.fire({
                                   title: 'Error!',
                                   text: 'The product price needs to be at least $40',
                                   icon: 'error',
                                   confirmButton: 'Retry'
                              });
                              return false; // Validation failed
                         }

                         if (discount > 30 || discount <= 0) {
                              Swal.fire({
                                   title: 'Error!',
                                   text: 'Discount must be between 0 and 30%',
                                   icon: 'error',
                                   confirmButton: 'Retry'
                              });
                              return false; // Validation failed
                         }

                         if (stock < 1) {
                              Swal.fire({
                                   title: 'Error!',
                                   text: 'Stock must be at least 1',
                                   icon: 'error',
                                   confirmButton: 'Retry'
                              });
                              return false; // Validation failed
                         }

                         if (croppedImagesArray.length < 3 || croppedImagesArray.length > 4) {
                              Swal.fire({
                                   title: 'Error!',
                                   text: 'You must upload 3 to 4 images',
                                   icon: 'error',
                                   confirmButton: 'Ok'
                              });
                              return false; // Validation failed
                         }

                         return true; // All validations passed
                    }

               });
