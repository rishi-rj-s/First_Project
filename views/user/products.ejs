      align-items: center;
      margin-bottom: 10px;
    }

    .form-outline-inline input[type="search"] {
      width: 100%;
      margin-right: 5px;
    }

    .icons {
      align-items: center;
    }

    .icons a {
      margin-right: 10px;
    }

    @media (min-width: 768px) {
      .banner h1 {
        margin-bottom: 0;
      }

      .form-outline-inline input[type="search"] {
        width: auto;
        margin-right: 0;
      }
    }

    .banner .icons i {
      font-size: xx-large;
      padding-right: 10px;
    }

    .banner .fa-heart {
      color: red !important;
    }

    .banner .fa-shopping-cart {
      color: orange !important;
    }

    .banner .fa-user {
      color: Teal !important;
    }

    .social-icons i {
      padding-right: 10px;
      color: white;
    }

    .breadcrumb {
      background-color: #f5f5f5;
      padding: 10px;
      margin-bottom: 20px;
    }

    .breadcrumb-item+.breadcrumb-item::before {
      content: ">";
      padding: 0 5px;
      color: #ccc;
    }

    .breadcrumb-item a {
      color: #333;
    }

    .breadcrumb-item.active {
      color: #777;
    }

    @media (max-width: 519px) {
      .breadcrumb {
        margin-top: 2rem;
      }
    }
  </style>
</head>

