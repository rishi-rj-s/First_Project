  <!-- partial:index.partial.html -->
  <section class="section-products">
    <div class="container">
      <div class="row justify-content-center text-center">
        <div class="col-md-8 col-lg-6">
          <h2 class="mb-5">
            <% let filteredProducts = [] %>
            <% if(all) {  filteredProducts = pdt.filter(pdt => pdt.listing !== "Unlisted" && categ.map(cat => cat.category).includes(pdt.category));  %>
              All
            <% } else { filteredProducts = pdt.filter(pdt => pdt.listing !== "Unlisted") %>
              <%= category %>
            <% } %> Collection
          </h2>
        </div>
      </div>
  
      <% const productsPerPage = 6; %>
      <% const pageCount = Math.ceil(filteredProducts.length / productsPerPage); %>
  
      <% for (let i = 0; i < pageCount; i++) { %>
        <div class="page-container" id="page<%= i + 1 %>">
          <div class="row">
            <% const startIndex = i * productsPerPage; %>
            <% const endIndex = Math.min((i + 1) * productsPerPage, filteredProducts.length); %>
            <% const currentProducts = filteredProducts.slice(startIndex, endIndex); %>
            <% currentProducts.forEach((pdt) => { %>
              <div class="col-md-4">
                <div id="product-<%= pdt._id %>" class="single-product">
                  <div class="part-1">
                    <img src="/<%= pdt.images[0] %>" alt=""
                      style="height: 100%; width: 100%; background-repeat: no-repeat; background-size: cover; background-position: center;">
                    <ul>
                      <li><a href="/user/addtocart/<%= pdt._id%>"><i class="fa fa-shopping-cart"></i></a></li>
                      <li><a href="/user/addwishlist/<%= pdt._id%>"><i class="fa fa-heart"></i></a></li>
                      <li><a href="/user/productview/<%= pdt._id %>"><i class="fa fa-expand"></i></a></li>
                    </ul>
                  </div>
                  <div class="part-2">
                    <h3 class="product-title">
                      <%= pdt.p_name %>
                    </h3>
                    <% if(pdt.stock<=0){%>
                      <p class="text-danger">Out of Stock</p>
                    <%}else{%>
                      <h4 class="product-old-price">$<%= pdt.price %></h4>
                      <h4 class="product-price text-lg">$<%= pdt.total_price %></h4>
                    <%}%>
                  </div>
                </div>
              </div>
            <% }); %>
          </div>
        </div>
      <% } %>
  
      <div class="pagination justify-content-center">
        <% for (let i = 1; i <= pageCount; i++) { %>
          <button class="page-link <%= i === 1 ? 'active' : '' %>" onclick="showPage(<%= i %>)">
            <%= i %>
          </button>
        <% } %>
      </div>
    </div>
  </section>
    <script>
    function showPage(pageNumber) {
      const pages = document.querySelectorAll('.page-container');
      pages.forEach((page) => {
        page.style.display = 'none';
      });
      const currentPage = document.getElementById('page' + pageNumber);
      if (currentPage) {
        currentPage.style.display = 'block';
      }
    }
    showPage(1); // Show the first page initially
  </script>
