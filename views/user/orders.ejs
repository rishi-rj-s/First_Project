                    </div>
                    <div class="pagination">
                        <button id="prevPage" class="page-link">&laquo; Prev</button>
                        <button id="nextPage" class="page-link">Next &raquo;</button>
                    </div>
                </div>
            </main>
        </div>
    </div>

    <script>
        const ordersPerPage = 4; // Number of orders to display per page
        let currentPage = 1;

        // Function to display orders based on current page
        function displayOrders() {
            const ordersTable = document.getElementById('ordersTable');
            const rows = ordersTable.querySelectorAll('tbody tr');
            const numPages = Math.ceil(rows.length / ordersPerPage);

            // Hide all rows
            rows.forEach(row => row.style.display = 'none');

            // Calculate start and end index for current page
            const startIndex = (currentPage - 1) * ordersPerPage;
            const endIndex = Math.min(startIndex + ordersPerPage, rows.length);

            // Display rows for current page
            for (let i = startIndex; i < endIndex; i++) {
                rows[i].style.display = '';
            }

            // Disable/enable prev/next buttons based on current page
            const prevButton = document.getElementById('prevPage');
            const nextButton = document.getElementById('nextPage');

            prevButton.style.display = (currentPage === 1 || numPages <= 1) ? 'none' : 'inline-block';
            nextButton.style.display = (currentPage === numPages || numPages <= 1) ? 'none' : 'inline-block';
        }

        // Event listener for next page button
        document.getElementById('nextPage').addEventListener('click', () => {
            const numPages = Math.ceil(document.getElementById('ordersTable').querySelectorAll('tbody tr').length / ordersPerPage);
            if (currentPage < numPages) {
                currentPage++;
                displayOrders();
            }
        });

        // Event listener for previous page button
        document.getElementById('prevPage').addEventListener('click', () => {
            if (currentPage > 1) {
                currentPage--;
                displayOrders();
            }
        });

        // Initial display of orders
        displayOrders();
    </script>
