                                <a class="nav-item nav-link" data-bs-toggle="tab" href="#nav-returned">Returned</a>
                            </div>
                            <div class="tab-content">
                                <div class="tab-pane fade show active" id="nav-pending">
                                    <div class="table-responsive">
                                        <table class="table">
                                            <thead>
                                                <tr>
                                                    <th scope="col">Order ID</th>
                                                    <th scope="col">Payment Status</th>
                                                    <th scope="col">Order Date</th>
                                                    <th scope="col">Order Status</th>
                                                    <th scope="col">Order Total</th>
                                                    <th scope="col">Action</th>
                                                    <th></th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% orders.forEach(order=> {%>
                                                    <% if (order.status==="Pending" || order.status==="Shipped" ) { %>
                                                        <tr>
                                                            <td class="text-center align-middle">
                                                                <%= order._id %>
                                                            </td>
                                                            <td class="text-center align-middle">
                                                                <%= order.paymentStatus %>
                                                            </td>
                                                            <td class="text-center align-middle">
                                                                <%= order.orderDate.toLocaleDateString() %>
                                                            </td>
                                                            <td class="text-center align-middle">
                                                                <%= order.status %>
                                                            </td>
                                                            <td class="text-center align-middle">
                                                                $<%= order.totalAmount %>
                                                            </td>
                                                            <td class="text-center align-middle"><button
                                                                    class="btn btn-warning text-white cancel"
                                                                    data-order-id="<%= order._id %>">
                                                                    Cancel
                                                                </button>
                                                            </td>
                                                            <td class="text-center align-middle">
                                                                <button class="btn btn-info view-order-btn"
                                                                  data-order-id="<%= order._id %>">View</button>
                                                              </td>
                                                              <script>
                                                                document.addEventListener('DOMContentLoaded', function () {
                                                                  const viewOrderBtns = document.querySelectorAll('.view-order-btn');
                            
                                                                  viewOrderBtns.forEach(btn => {
                                                                    btn.addEventListener('click', function () {
                                                                      const orderId = this.getAttribute('data-order-id');
                                                                      const url = `/user/viewsingleorder?oid=${orderId}`;
                            
                                                                      // Redirect to the specified URL
                                                                      window.location.href = url;
                                                                    });
                                                                  });
                                                                });
                                                              </script>
                                                        </tr>
                                                        <script>
                                                            document.addEventListener("DOMContentLoaded", function () {
                                                                // Add event listener to Cancel buttons
                                                                document.querySelectorAll('.cancel').forEach(button => {
                                                                    button.addEventListener('click', function () {
                                                                        console.log("Cancel button clicked!"); // Debugging statement

                                                                        const orderId = this.getAttribute('data-order-id');
                                                                        // Display SweetAlert confirmation dialog
                                                                        Swal.fire({
                                                                            title: "Are you sure?",
                                                                            text: "Cancel this order?",
                                                                            icon: "warning",
                                                                            showCancelButton: true,
                                                                            confirmButtonColor: "#3085d6",
                                                                            cancelButtonColor: "#d33",
                                                                            confirmButtonText: "Cancel!",
                                                                        }).then((result) => {
                                                                            if (result.isConfirmed) {
                                                                                // User confirmed cancellation, send request to cancel order
                                                                                fetch(`/user/cancelorder/${orderId}`, {
                                                                                    method: "GET",
                                                                                })
                                                                                    .then((response) => {
                                                                                        if (!response.ok) {
                                                                                            throw new Error("Failed to cancel order");
                                                                                        }
                                                                                        return response.json(); // Parse JSON response
                                                                                    })
                                                                                    .then((data) => {
                                                                                        // Check the success status from the server response
                                                                                        if (data.success) {
                                                                                            // Show success message using SweetAlert
                                                                                            Swal.fire({
                                                                                                title: "Cancelled!",
                                                                                                text: data.message,
                                                                                                icon: "success",
                                                                                            }).then(() => {
                                                                                                // Reload the page or perform any other actions
                                                                                                window.location.reload();
                                                                                            });
                                                                                        } else {
                                                                                            // Show error message using SweetAlert
                                                                                            Swal.fire({
                                                                                                title: "Failed!",
                                                                                                text: data.message,
                                                                                                icon: "error",
                                                                                            });
                                                                                        }
                                                                                    })
                                                                                    .catch((error) => {
                                                                                        console.error("Error:", error);
                                                                                        // Show error message using SweetAlert
                                                                                        Swal.fire({
                                                                                            title: "Error!",
                                                                                            text: "Something went wrong.",
                                                                                            icon: "error",
                                                                                        });
                                                                                    });
                                                                            }
                                                                        });
                                                                    });
                                                                });
                                                            });
                                                        </script>
                                                        <% } %>
                                                            <% }) %>
