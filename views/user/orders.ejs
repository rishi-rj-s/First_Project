                                                                    <td class="text-center align-middle"><button
                                                                            class="btn btn-warning text-white return">
                                                                            Return
                                                                        </button></td>
                                                                    <%} else {%>
                                                                        <td class="text-center align-middle">
                                                                            Return not possible
                                                                        </td>
                                                                <%}%>
                                                                <td class="text-center align-middle">
                                                                    <button class="btn btn-info view-order-btn"
                                                                      data-order-id="<%= order._id %>">View</button>
                                                                  </td>
                                                                  <script>
                                                                    document.addEventListener('DOMContentLoaded', function () {
                                                                      const viewOrderBtns = document.querySelectorAll('.view-order-btn');
                                
                                                                      viewOrderBtns.forEach(btn => {
                                                                        btn.addEventListener('click', function () {
                                                                          const orderId = this.getAttribute('data-order-id');
                                                                          const url = `/user/viewsingleorder?oid=${orderId}`;
                                
                                                                          // Redirect to the specified URL
                                                                          window.location.href = url;
                                                                        });
                                                                      });
                                                                    });
                                                                  </script>
                                                            </tr>
                                                            <script>
                                                                document.addEventListener("DOMContentLoaded", function () {
                                                                    // Add event listener to Cancel buttons
                                                                    document.querySelectorAll('.return').forEach(button => {
                                                                        button.addEventListener('click', function () {
                                                                            console.log("Return button clicked!"); // Debugging statement

                                                                            const orderId = "<%= order._id %>";

                                                                            // Display SweetAlert confirmation dialog
                                                                            Swal.fire({
                                                                                title: "Are you sure?",
                                                                                text: "Return this order?",
                                                                                icon: "warning",
                                                                                showCancelButton: true,
                                                                                confirmButtonColor: "#3085d6",
                                                                                cancelButtonColor: "#d33",
                                                                                confirmButtonText: "Return!",
                                                                            }).then((result) => {
                                                                                if (result.isConfirmed) {
                                                                                    // User confirmed cancellation, send request to cancel order
                                                                                    fetch(`/user/returnorder/${orderId}`, {
                                                                                        method: "GET",
                                                                                    })
                                                                                        .then((response) => {
                                                                                            if (!response.ok) {
                                                                                                throw new Error("Failed to return order");
                                                                                            }
                                                                                            return response.json(); // Parse JSON response
                                                                                        })
                                                                                        .then((data) => {
                                                                                            // Check the success status from the server response
                                                                                            if (data.success) {
                                                                                                // Show success message using SweetAlert
                                                                                                Swal.fire({
                                                                                                    title: "Processing",
                                                                                                    text: data.message,
                                                                                                    icon: "success",
                                                                                                }).then(() => {
                                                                                                    // Reload the page or perform any other actions
                                                                                                    window.location.reload();
                                                                                                });
                                                                                            } else {
                                                                                                // Show error message using SweetAlert
                                                                                                Swal.fire({
                                                                                                    title: "Failed!",
                                                                                                    text: data.message,
                                                                                                    icon: "error",
                                                                                                });
                                                                                            }
                                                                                        })
                                                                                        .catch((error) => {
                                                                                            console.error("Error:", error);
                                                                                            // Show error message using SweetAlert
                                                                                            Swal.fire({
                                                                                                title: "Error!",
                                                                                                text: "Something went wrong.",
                                                                                                icon: "error",
                                                                                            });
                                                                                        });
                                                                                }
                                                                            });
                                                                        });
                                                                    });
                                                                });
                                                            </script>
                                                            <% } %>
                                                            <% }) %>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
